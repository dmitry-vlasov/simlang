import type;

export {

BcComm ::= BcPush, BcPop, BcPrint, BcReadBool, BcReadInt, BcReadString, BcIf, BcGoto, BcOp, BcConstBool, BcConstInt, BcConstString;
	// stack <-> locals operations
	BcPush(i: int);
	BcPop(i: int);

	// Control flow operations
	BcIf(sh: int);
	BcGoto(sh: int);

	// input/output commands
	BcReadBool(i: int);
	BcReadInt(i: int);
	BcReadString(i: int);
	BcPrint();

	// Stack operations
	BcOp(op: string, arity: int);

	// Constants (for pushing onto stack):
	BcConstBool(b: bool);
	BcConstInt(v: int);
	BcConstString(s: string);

BcCode(
	locals: int,    // number of local variables, used in a program
	code: [BcComm],
);

}
