texpVars(acc: Set<string>, e: TExp) -> Set<string> {
	switch (e) {
		TLet(v,__,__):     insertSet(acc, v);
		TSeq(stats):       fold(stats, acc, texpVars);
		TWhile(__,body):   texpVars(acc, body);
		TIf(__, pos, neg): texpVars(texpVars(acc, pos), neg);
		default: acc;
	}
}
